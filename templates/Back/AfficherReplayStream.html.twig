{% extends 'baseBack.html.twig' %}

{% block title %}Hello Replay Streaming {% endblock %}

{% block body %}
    <style>

        .highlight{
            background-color:#09a195;
            color:#fff;


        }

    </style>
<div class="container">
    <h3 class="text-center mt-5" style="font-family: 'Gordita Black'">Replay Stream</h3>
    <div class="row mt-1">
        <div class="col-6 text-start">
            <a href="/infostream" class="btn btn-success mt-2">Information Stream</a>  <a href="/livestream" class="btn btn-success mt-2">Live Stream</a>

        </div>

        <div class="col-6 text-end">
            <a href="/replaystream/vues" class="btn btn-success mt-2">Vues</a>
            <a href="/replaystream/Ajouter" class="btn btn-success mt-2">Ajouter Replay Stream</a>

        </div>

    </div>
    <h5 class="text-center mt-3" style="font-family: 'Gordita Black'">Liste des Replays</h5>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong> {{ message }} </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <input style="border-color: silver; border: 0;  outline: none; border-radius: 1px; border-bottom: 3px solid silver;font-family:Orkney" id='myInput'
           class='mt-3' type='text' placeholder='Rechercher..' name='search'>
        <div class="table-responsive">
    <table id='fil' class="table table-striped ">
        <thead class="table-light">
        <tr class="text-center">
            <th scope="col">#ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Url</th>
            <th scope="col">Date</th>
            <th scope="col">Description</th>
            <th scope="col">Vues</th>

            <th scope="col">SousCat√©gorie</th>

            <th scope="col" style="width: 80px">Action</th>

        </tr>
        </thead>
        <tbody>

        {% for replaystream in replaystreams %}
            <tr >
                <th scope="row">{{ replaystream.idReplay }}</th>
                <td><span>{{replaystream.nomReplay }}</span></td>
                <td >{{replaystream.urlVideo }}</td>
                <td class="text-center">{{  replaystream.date.format('d/m/Y') }}</td>
                <td>{{replaystream.descriptionReplay }}</td>


                <td class="text-center">{{ replaystream.vuesReplay }}</td>
                <td class="text-center">{{ replaystream.idSouscat}}</td>

                <!-- <td>{ infostream.idSouscat }</td> -->


                <td style="width: 120px"class="text-center">
                    <a href="{{ path('app_replay_stream_voir', {id : replaystream.idReplay} ) }}"> <i style="color: #09a195" class="fa-solid fa-eye mx-1"></i></a>
                       <a href="{{ path('app_replay_stream_modifier', {id : replaystream.idReplay} ) }}"><i style="color: #09a195" class="fas fa-edit mx-1"></i></a>
                        <a href="{{ path('app_replay_stream_supprimer', {id : replaystream.idReplay} ) }}" onclick="return confirm('Voulez vous vraiement supprimer cette video')"><i style="color: #09a195" class="fas fa-trash-alt mx-1"></i></a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

</div>

</div>

{% endblock %}
