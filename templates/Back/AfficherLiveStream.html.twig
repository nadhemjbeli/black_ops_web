{% extends 'baseBack.html.twig' %}

{% block title %}Hello Live Streaming {% endblock %}

{% block body %}
    <style>

        .highlight{
            background-color:#09a195;
            color:#fff;


        }

    </style>
<div class="container">
    <h3 style="font-family: 'Gordita Black'" class="text-center mt-5">Live Stream</h3>
    <div class="row mt-1">
        <div class="col-6 text-start">
            <a href="/replaystream" class="btn btn-success mt-2">Replay Stream</a>  <a href="/infostream" class="btn btn-success mt-2">Information Stream</a>
        </div>

        <div class="col-6 text-end">
            <a href="/livestream/Ajouter" class="btn btn-success mt-2">Ajouter Live Stream</a>

        </div>

    </div>
    <h5 style="font-family: 'Gordita Black'" class="text-center mt-3">Liste des Lives</h5>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong> {{ message }} </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    <input style="border-color: silver; border: 0;  outline: none; border-radius: 1px; border-bottom: 3px solid silver;font-family:Orkney" id='myInput'
           class='mt-3' type='text' placeholder='Rechercher..' name='search'>
    <div class="table-responsive">
        <table id='fil' class="table table-striped ">
            <thead>
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Path</th>
                <th scope="col">Visibilité</th>
                <th scope="col">Défi</th>

                <th scope="col" style="width: 80px">Action</th>

            </tr>
            </thead>
            <tbody>

            {% for livestream in livestreams %}
                <tr>
                    <th scope="row">{{ livestream.idLivestream }}</th>
                    <td ><span>{{ livestream.nomLivestream }}</span></th>

                    <td >{{ livestream.pathLivestream }}</td>

                    <td >{{ livestream.visibiliteLivestream}}</td>

                    <td>{{livestream.idDefi }}</td>



                    <td class="text-center">
                        <a href="{{ path ('app_live_stream_modifier',{id:livestream.idLivestream}) }}"><i style="color: #09a195" class="fas fa-edit mx-1"></i></a>
                    <a href="{{ path ('app_live_stream_supprimer',{id:livestream.idLivestream}) }}" onclick="return confirm('voulez vous vraiment supprimer le live')"> <i style="color: #09a195" class="fas fa-trash-alt mx-1"></i></a></td>
                </tr>
            {% endfor %}

            </tbody>
        </table></div>

</div>
{% endblock %}
