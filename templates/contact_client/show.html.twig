{% extends 'Admin_base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdContact</th>
                <td>{{ contact.idContact }}</td>
            </tr>
            <tr>
                <th>NpContact</th>
                <td>{{ contact.npContact }}</td>
            </tr>
            <tr>
                <th>MailContact</th>
                <td>{{ contact.mailContact }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ contact.date ? contact.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_client_index') }}">back to list</a>

    <a href="{{ path('app_contact_client_edit', {'idContact': contact.idContact}) }}">edit</a>

    {{ include('contact_client/_delete_form.html.twig') }}
{% endblock %}
