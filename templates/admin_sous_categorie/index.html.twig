    <table class="table">
        <thead>
            <tr>
                <th>IdSouscat</th>
                <th>NomSouscat</th>
                <th>IdCat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sous_categorie in sous_categories %}
            <tr>
