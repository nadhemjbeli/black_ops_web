                <td>{{ sous_categorie.nomSouscat }}</td>
                <td>{{ sous_categorie.idCat }}</td>
                <td>
                    <a href="{{ path('app_admin_sous_categorie_show', {'idSouscat': sous_categorie.idSouscat}) }}">show</a>
